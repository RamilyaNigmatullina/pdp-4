<div class="container">
  <div class="row justify-content-center">
    <div class="col col-md-5">
      <h2><%= "Sign in to #{current_company.name}" %></h2>
      <br>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, autofocus: true, input_html: { autocomplete: "email" } %>
          <%= f.input :password, input_html: { autocomplete: "current-password" } %>
          <%= f.input :company_id, as: :hidden, input_html: { value: current_company.id } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <br>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
