<div class="row justify-content-center">
  <div class="col col-md-5">
    <h2>Change your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, label: "New password", required: true, autofocus: true, input_html: { autocomplete: "new-password" }
          hint: (t("devise.shared.minimum_password_length", count: @minimum_password_length) if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: "Confirm new password", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change my password" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
