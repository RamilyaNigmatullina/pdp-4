<div class="bg-light border-right" id="sidebar-wrapper">
  <div class="sidebar-heading">
    <%= link_to current_company.name, company_root_path, class: "sidebar-headling__link" %>
  </div>

  <div class="list-group list-group-flush">
    <%= link_to "Chats", chats_path, class: "list-group-item list-group-item-action bg-light" %>
    <%- if allowed_to?(:index?, User, with: UserPolicy) %>
      <%= link_to "Users", users_path, class: "list-group-item list-group-item-action bg-light" %>
    <% end %>
    <%- if allowed_to?(:edit?, current_company, with: CompanyPolicy) %>
      <%= link_to "Company settings", edit_company_path, class: "list-group-item list-group-item-action bg-light" %>
    <% end %>
    <%= link_to "Profile settings", edit_profile_path, class: "list-group-item list-group-item-action bg-light" %>
    <%= link_to "Update password", edit_profiles_passwords_path,
      class: "list-group-item list-group-item-action bg-light" %>
    <%= link_to "Sign Out", destroy_user_session_path,
      method: :delete, class: "list-group-item list-group-item-action bg-light" %>
  </div>
</div>
